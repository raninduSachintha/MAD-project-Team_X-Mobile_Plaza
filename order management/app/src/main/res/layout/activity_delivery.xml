<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cus_no2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".updateDelivery">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-160dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="206dp"
            android:layout_height="91dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/d23" />

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cus_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Customer Name  :"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cus_no"
                app:layout_constraintEnd_toStartOf="@+id/cus_name2" />

            <TextView
                android:id="@+id/cus_name2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:hint="Santhush Bathiya"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="253dp"
                tools:layout_editor_absoluteY="183dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cus_no"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:text="Phone Number :"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/cus_address"
                app:layout_constraintEnd_toStartOf="@+id/cus_no3" />

            <EditText
                android:id="@+id/cus_no3"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:hint="0775454789"
                app:layout_constraintTop_toBottomOf="@+id/cus_name2"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="253dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="41dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cus_address"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:paddingTop="10dp"
            android:text="Adderss :"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/cus_address2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="254dp" />

        <EditText
            android:id="@+id/cus_address2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Colombo-5,Lake rd,No 567"
            app:layout_constraintTop_toBottomOf="@+id/cus_no3"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="253dp" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="41dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cus_price"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="Price :"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/cus_address2"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="254dp" />

            <TextView
                android:id="@+id/pricer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="1500.00"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/cus_no3"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="253dp" />

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="Delete"
                android:text="Delete"
                android:textColor="#0C0A0A"
                android:textSize="14sp"
                app:backgroundTint="@color/teal_200"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="76dp"
                tools:layout_editor_absoluteY="348dp" />

            <Button
                android:id="@+id/update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="UpdateDelivery"
                android:layout_marginLeft="30dp"
                android:text="@string/btn_update"
                android:textColor="#000000"
                app:backgroundTint="#8295FF"
                app:iconTint="#040202"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="234dp"
                tools:layout_editor_absoluteY="348dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_pay"
            android:layout_width="193dp"
            android:layout_height="41dp"
            android:layout_marginStart="108dp"
            android:layout_marginLeft="108dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/arima_madurai_extralight"
            android:onClick="AddPay"
            android:text="@string/btn_payment"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#8295FF"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="409dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="277dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="141dp"
                android:layout_height="152dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.995"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/d4"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="396dp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="259dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/delivery"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-7dp"
                tools:layout_editor_absoluteY="378dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>