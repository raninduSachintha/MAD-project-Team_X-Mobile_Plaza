<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobilehousecard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MobileHouseCard">
        <activity android:name=".Checkout"/>
        <activity android:name=".PayCards"/>
        <activity android:name=".PaymentMethod"/>
        <activity android:name=".View_Additems"/>
        <activity android:name=".View_item" />
        <activity android:name=".DeliveryAdd" />
        <activity android:name=".updateDelivery" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>